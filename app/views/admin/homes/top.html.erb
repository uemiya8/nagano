<h4>注文履歴一覧</h4>
<table class="table table-hover table-invrse">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    
    <tbody>
      <% @orders.each do |order| %>
       <tr>
         <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %></td>
         <td><%= order.name %></td>
         <td><%= order.total_amount %></td>
         <td><%= order.status_i18n %> </td>
       </tr>
      <% end %>
    </tbody>
  </thead>
  </table>
  