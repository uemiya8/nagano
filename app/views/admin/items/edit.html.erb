<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">
   <h4>商品編集</h4>
   <%= form_with model: @item, url:admin_item_path(@item.id) do |f| %>
    <p>商品画像</p>
    <%= f.file_field :image, accept: "image/*" %>
    <p>商品名</p>
    <%= f.text_field :name %>
    <p>商品説明</p>
    <%= f.text_area :introduction %>
    <p>ジャンル</p>
    <%= f.collection_select :genre_id,Genre.all,:id,:name %>
    <p>税抜価格</p>
    <%= f.text_field :price %>
    <p>販売ステータス</p>
    <%= f.radio_button :is_active, :sale %>
    <%= f.label :is_active_true, "販売中" %>
    <%= f.radio_button :is_active, :stop %>
    <%= f.label :is_active_false, "販売停止" %>
    
    <%= f.submit '変更を保存', class: "btn btn-sn btn-success" %>
   <% end %>
  </div>
 </div>
</div>