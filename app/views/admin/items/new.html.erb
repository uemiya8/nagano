<h3>新規商品登録</h3>
<%= form_with model: @item, url: 'admin/items/new', method: :get do |f| %>

 <h4>商品画像</h4>
 <%= f.file_field :image, accept: "image/*" %>

 <h4>商品名</h4>
  <%= f.text_field :name %>
  
 <h4>商品説明</h4>
 <%= f.text_area :introduction %>
 
 <h4>ジャンル</h4>
 <%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]} %>
 
 <h4>税抜価格</h4>
 <%= f.text_field :price %>
 
 <h4>ステータス</h4>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active_true, "販売中" %>

<%= f.radio_button :is_active, false %>
<%= f.label :is_active_false, "販売停止" %><br>


<%= f.submit '新規登録' %>
   
 <% end %>