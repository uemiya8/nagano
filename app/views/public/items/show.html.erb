<div class="container px5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      
<div class="col-md-8 offset-md-1">
  
  <%= image_tag @item.get_image(100,100) %>
  
  
  <%= @item.name %>
  <%= @item.introduction %>
  
  <%= @item.price %>
  
  <%= form_with model: @cart_item, url:cart_items_path do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..5] %>
  <%=f.submit "カートに入れる" %>
  <% end %>
  
  
  
  