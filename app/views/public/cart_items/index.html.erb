<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-6 px-5 px-sm-0 mx-auto">

<h4>ショッピングカート</h4>
<%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
<table class="table"> 
  <thead>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
  </thead>
  <tbody>
  <% @cart_item.each do |cart_item| %>
  
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price%></td>
        <%= form_with model: cart_item, url:cart_item_path(cart_item.id), method: :patch do |f| %>
        <td><%= f.select :amount, *[1..5] %>
            <%=f.submit "変更" %> </td>
            <% end %>
            
        <td><%= (cart_item.item.price * 1.1).floor * cart_item.amount %></td>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
          <% @total_fee +=  (cart_item.item.price * 1.1).floor * cart_item.amount %>
      </tr>
  <% end %>
  </tbody>
   

  
</table>

<%= link_to "情報入力に進む", new_order_path, class: "btn btn-sn btn-success" %>
<%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
<table class="table"> 
<thead>
<tr>
<th>合計金額</th>
<th><%= @total_fee %></th>
</tr>
</thead>
</table>
  </div>
 </div>
</div>