<h5>注文履歴詳細</h5>

<table>
 <thead>
   <tr>
    <p>注文情報</p>
     <th>注文日</th>
     <th>配送先</th>
     <th>支払方法</th>
     <th>ステータス</th>
   </tr>
 </thead>
 
 <tbody>
   <tr>
     <td><%=@order.created_at.strftime('%Y/%m/%d') %></td>
     <td><%= @order.address %></td>
     <td><%=@order.payment_method %></td>
     <td><%= @order.status %></td>
   </tr>
 </tbody>
 </table>
 
 <tanle>
   <p>請求情報</p>
    <thead>
      <tr>
        <th>商品合計</th>
        <th>配送料</th>
        <th>ご請求額</th>
      </tr>
    </tbody>
     <tr>
      <td><%= @total_fee %></td>
      <td><%= @order.shipping_cost %></td> 
      <td><%= @total_fee + @order.shipping_cost %></td>
   </tr>
    <tbody>
      
    </tbody>
 </tanle>
 
 
 <table>
  <p>注文内容</p>
  <thead>
   <tr>
     <th>商品</th>
     <th>単価(税込)</th>
     <th>個数</th>
     <th>小計</th>
   </tr>
  </thead>
  
  <tbody>
    <% @order_details.each do |order_detail| %>
   <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= (order_detail.price * 1.1).floor %></td>
    <td><%= order_detail.amount %></td>
    <td><%= (order_detail.item.price * 1.1).floor * order_detail.amount %></td>
   </tr>
   <% end %>
  </tbody>
</table>